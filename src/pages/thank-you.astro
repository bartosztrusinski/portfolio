---
import RootLayout from '@/layouts/root-layout.astro';
import { Icon } from 'astro-icon/components';
---

<RootLayout>
  <div
    class='fixed inset-0 -z-10 h-full w-full bg-slate-100 bg-[linear-gradient(to_right,#eee_1px,transparent_1px),linear-gradient(to_bottom,#eee_1px,transparent_1px)] bg-size-[9rem_6rem]'>
  </div>
  <div
    class='bg-primary absolute inset-0 -z-10 m-auto size-1/3 rounded-full opacity-20 blur-[8rem]'>
  </div>
  <main class='flex h-screen items-center justify-center p-6'>
    <div
      class='w-max max-w-sm rounded-xl bg-slate-50 p-4 pb-10 shadow-lg sm:mx-16 sm:max-w-md sm:pb-16'>
      <a href='/' class='link-primary me-auto block w-max'>
        <Icon name='lucide:arrow-left' class='text-primary size-8' />
        <span class='sr-only'>Back to home</span>
      </a>
      <article class='flex flex-col items-center justify-center gap-1 px-2 md:mt-4'>
        <Icon name='lucide:mail-check' class='text-primary mb-0 text-6xl sm:text-7xl md:text-8xl' />
        <h1 class='text-center text-2xl font-bold text-balance sm:text-3xl'>
          Message has been sent
        </h1>
        <p class='text-center! sm:text-lg'>
          Thank you for reaching out! I'll get back to you as soon as possible
        </p>
      </article>
    </div>
  </main>
</RootLayout>
