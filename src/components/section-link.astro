---
import { Icon } from 'astro-icon/components';

type Props = {
  sectionId: string;
};

const { sectionId } = Astro.props;
---

<a
  href={`#${sectionId}`}
  class='link-primary group flex w-max items-center transition-opacity duration-150 hover:opacity-70'>
  <slot />
  <Icon
    name='lucide:link'
    class='mx-1 size-[0.67em] opacity-0 transition-opacity duration-150 group-hover:opacity-100 group-focus-visible:opacity-100'
  />
</a>
