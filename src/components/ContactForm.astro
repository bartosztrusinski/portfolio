<form
  action='https://api.web3forms.com/submit'
  method='POST'
  class='flex w-full max-w-xs flex-col gap-4 justify-self-center sm:max-w-md'>
  {/* Access Key */}
  <input type='hidden' name='access_key' value='53c17700-c53f-4dee-b0b4-83cc7ee7d51c' />

  <div class='flex flex-col gap-4 sm:flex-row'>
    <div class='flex grow flex-col gap-1'>
      <label for='name'>Name</label>
      <input
        type='text'
        id='name'
        name='name'
        autocomplete='name'
        placeholder='John Doe'
        class='rounded-sm px-2 py-1'
        required
      />
    </div>
    <div class='flex grow flex-col gap-1'>
      <label for='email'>Email address</label>
      <input
        type='email'
        id='email'
        name='email'
        autocomplete='email'
        placeholder='john@doe.com'
        class='rounded-sm px-2 py-1'
        required
      />
    </div>
  </div>
  <div class='flex grow flex-col gap-1'>
    <label for='message'>Message</label>
    <textarea id='message' name='message' rows='3' class='rounded-sm px-2 py-1' required></textarea>
  </div>

  {/* Honeypot Spam Protection */}
  <input type='checkbox' name='botcheck' class='hidden' />

  <button type='submit' class='mt-2 rounded bg-primary px-2 py-2 font-semibold'>Send message</button
  >
</form>
