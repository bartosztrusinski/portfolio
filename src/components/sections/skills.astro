---
import { skills } from '@/data/skills';
import SectionLink from '@/components/section-link.astro';
import Skill from '@/components/skill.astro';
---

<section id='skills'>
  <div class='slide-up'>
    <h2 class='text-2xl font-bold'>
      <SectionLink sectionId='skills'>Skills</SectionLink>
    </h2>
    <p class='mb-4'>Technologies and tools I use to build amazing web experiences</p>
    <div class='space-y-6'>
      {skills.map((props) => <Skill {...props} />)}
    </div>
  </div>
</section>
