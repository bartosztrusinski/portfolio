---
import { Icon } from 'astro-icon/components';
import { socialLinks } from '@/data/social-links';
---

<footer class='bg-slate-900 bg-pattern px-4 py-5 font-semibold'>
  <div class='mb-4 flex flex-col items-center justify-center gap-x-4 gap-y-1 text-lg sm:flex-row'>
    {
      socialLinks.map(({ name, url, icon }) => (
        <a
          href={url}
          target='_blank'
          class='link flex items-center gap-1 p-1 text-primary outline-2'>
          <Icon name={icon} class='size-5 sm:size-6' />
          {name}
        </a>
      ))
    }
  </div>
  <p class='text-center text-sm text-slate-300'>
    &copy; {new Date().getFullYear()} Made with
    <Icon name='lucide:heart' class='mx-px inline size-4 stroke-2 text-red-500' />
    by Bartosz Trusi≈Ñski
  </p>
</footer>
