---
import { Icon } from 'astro-icon/components';
import { socialLinks } from '@/data/social-links';
---

<footer class='bg-slate-900 bg-pattern py-5'>
  <div
    class='mx-5 mb-4 flex flex-wrap items-center justify-center gap-x-8 gap-y-4 text-lg font-bold'>
    {
      socialLinks.map(({ name, url, icon }) => (
        <a
          href={url}
          target='_blank'
          class='link flex items-center gap-1 rounded px-1 text-primary outline-2'>
          <Icon name={icon} class='size-[1.25em]' />
          {name}
        </a>
      ))
    }
  </div>
  <p class='text-center text-slate-300'>&copy; 2025 Bartosz Trusi≈Ñski. All rights reserved.</p>
</footer>
